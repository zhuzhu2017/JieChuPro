                    android:layout_height="@dimen/space_1ittle"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/common_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/space_10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/piao_details_title"
                            android:text="通过本线（邻线）\n列车次数：" />

                        <TextView
                            android:id="@+id/tv_details_bxlccs"
                            style="@style/piao_details_des" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/piao_details_title"
                            android:text="通过作业地点关键\n列车次数：" />

                        <TextView
                            android:id="@+id/tv_details_gjlccs"
                            style="@style/piao_details_des" />

                    </LinearLayout>

                </LinearLayout>
                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1ittle"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/common_gray" />
                <!--其他上道作业行车防护“三率”统计-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="@dimen/space_10"
                    android:text="其他上道作业行车防护“三率”统计"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/xx_large_font" />
                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1ittle"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/common_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/space_10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/piao_details_title"
                            android:text="防护登记作业次数：" />

                        <TextView
                            android:id="@+id/tv_details_fhdjzycs2"
                            style="@style/piao_details_des" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/piao_details_title"
                            android:text="实际预告列车次数：" />

                        <TextView
                            android:id="@+id/tv_details_sjyglccs2"
                            style="@style/piao_details_des" />

                    </LinearLayout>

                </LinearLayout>
                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1ittle"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/common_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/space_10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/piao_details_title"
                            android:text="提前10分钟下道次数：" />

                        <TextView
                            android:id="@+id/tv_details_xdcs2"
                            style="@style/piao_details_des" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/piao_details_title"
                            android:text="实际上道作业次数：" />

                        <TextView
                            android:id="@+id/tv_details_sjsdcs2"
                            style="@style/piao_details_des" />

                    </LinearLayout>

                </LinearLayout>
                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1ittle"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/common_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/space_10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/piao_details_title"
                            android:text="通过本线（邻线）\n列车次数：" />

                        <TextView
                            android:id="@+id/tv_details_bxlccs2"
                            style="@style/piao_details_des" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/piao_details_title"
                            android:text="通过作业地点关键\n列车次数：" />

                        <TextView
                            android:id="@+id/tv_details_gjlccs2"
                            style="@style/piao_details_des" />

                    </LinearLayout>

                </LinearLayout>
                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1ittle"
                    android:layout_marginBottom="@dimen/space_50"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/common_gray" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>