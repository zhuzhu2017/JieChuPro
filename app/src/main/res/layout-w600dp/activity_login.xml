<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.8"
        android:background="@drawable/bg_login" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">
        <!--标题-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/space_5"
            android:text="@string/login_string"
            android:textColor="@color/common_blue"
            android:textSize="@dimen/xxx_large_font" />
        <!--账户名密码输入框-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_20"
            android:orientation="vertical"
            android:padding="@dimen/space_40">

            <!--用户名-->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_height"
                android:background="@drawable/shape_four_corner_grey"
                android:gravity="center"
                android:hint="@string/account_string"
                android:textColorHint="@color/white"
                android:textSize="@dimen/common_font" />

            <!--密码-->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_height"
                android:layout_marginTop="@dimen/space_20"
                android:background="@drawable/shape_four_corner_grey"
                android:gravity="center"
                android:hint="@string/pwd_string"
                android:textColorHint="@color/white"
                android:textSize="@dimen/common_font" />

            <!--备用IP-->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_height"
                android:layout_marginTop="@dimen/space_20"
                android:background="@drawable/shape_four_corner_grey"
                android:gravity="center"
                android:hint="@string/ip_string"
                android:textColorHint="@color/white"
                android:textSize="@dimen/common_font" />
        </LinearLayout>
        <!--登录按钮-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_height"
            android:layout_marginLeft="@dimen/space_40"
            android:layout_marginRight="@dimen/space_40"
            android:background="@drawable/shape_four_corner_blue"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/common_font" />
    </LinearLayout>

</LinearLayout>