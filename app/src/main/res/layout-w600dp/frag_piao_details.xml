<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--顶部布局-->
            <include layout="@layout/layout_frag_top" />
            <!--详情布局-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/space_30"
                android:paddingRight="@dimen/space_30">

                <!--第一行-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/piao_details_title"
                            android:text="发票人：" />

                        <TextView android:id="@+id/tv_details_fpr" style="@style/piao_details_des" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/piao_details_title"
                            android:text="发票时间：" />

                        <TextView android:id="@+id/tv_details_fpsj" style="@style/piao_details_des" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/piao_details_title"
                            android:text="安全等级：" />

                        <TextView android:id="@+id/tv_details_aqdj" style="@style/piao_details_des" />

                    </LinearLayout>

                </LinearLayout>
                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1ittle"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/common_gray" />
                <!--第二行-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/space_10">

                    <TextView
                        style="@style/piao_details_title"
                        android:text="封锁范围：" />

                    <TextView android:id="@+id/tv_details_fsfw" style="@style/piao_details_des" />

                </LinearLayout>
                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1ittle"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/common_gray" />
                <!--第三行-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/space_10">

                    <TextView
                        style="@style/piao_details_title"
                        android:text="作业范围：" />

                    <TextView android:id="@+id/tv_details_zyfw" style="@style/piao_details_des" />

                </LinearLayout>
                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1ittle"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/common_gray" />
                <!--第四行-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/space_10">

                    <TextView
                        style="@style/piao_details_title"
                        android:text="作业内容：" />

                    <TextView android:id="@+id/tv_details_zynr" style="@style/piao_details_des" />

                </LinearLayout>
                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1ittle"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/common_gray" />
                <!--第五行-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/space_10">

                    <TextView
                        style="@style/piao_details_title"
                        android:text="工作有效期：" />

                    <TextView android:id="@+id/tv_details_gzyxq" style="@style/piao_details_des" />

                </LinearLayout>
                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1ittle"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/common_gray" />
                <!--第六行-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/space_10">

                    <TextView
                        style="@style/piao_details_title"
                        android:text="工作领导人：" />

                    <TextView android:id="@+id/tv_details_gzldr" style="@style/piao_details_des" />

                </LinearLayout>
                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1ittle"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/common_gray" />
                <!--第七行~第十二行-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/space_10">

                    <TextView
                        style="@style/piao_details_title"
                        android:text="司机：" />

                    <TextView android:id="@+id/tv_details_sj" style="@style/piao_details_des" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1ittle"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/common_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/space_10">

                    <TextView
                        style="@style/piao_details_title"
                        android:text="作业组成员\n姓名及安全\n等级：" />

                    <TextView android:id="@+id/tv_details_zyzcyxm" style="@style/piao_details_des" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1ittle"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/common_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/space_10">

                    <TextView
                        style="@style/piao_details_title"
                        android:text="其他作业组成员\n姓名及安全等级：" />

                    <TextView android:id="@+id/tv_details_qtzyzcyxm" style="@style/piao_details_des" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1ittle"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/common_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/space_10">

                    <TextView
                        style="@style/piao_details_title"
                        android:text="需停电的设备：" />

                    <TextView android:id="@+id/tv_details_xtdsb" style="@style/piao_details_des" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1ittle"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/common_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/space_10">

                    <TextView
                        style="@style/piao_details_title"
                        android:text="装设接地线的位置：" />

                    <TextView android:id="@+id/tv_details_jdxwz" style="@style/piao_details_des" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1ittle"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/common_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/space_10">

                    <TextView
                        style="@style/piao_details_title"
                        android:text="作业区防护措施：" />

                    <TextView android:id="@+id/tv_details_zyqfhcs" style="@style/piao_details_des" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1ittle"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/common_gray" />
                <!--第十三行-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/space_10">

                    <TextView
                        style="@style/piao_details_title"
                        android:text="其他安全措施：" />

                    <TextView android:id="@+id/tv_details_qtaqcs" style="@style/piao_details_des" />

                </LinearLayout>
                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1ittle"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/common_gray" />
                <!--领导人填写-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="@dimen/space_10"
                    android:text="以下由领导人填写"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/xx_large_font" />
                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1ittle"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/common_gray" />
                <!--十四-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/space_10">

                    <TextView
                        style="@style/piao_details_title"
                        android:text="变更作业组成员\n记录：" />

                    <TextView android:id="@+id/tv_details_bgzyzcyjl" style="@style/piao_details_des" />

                </LinearLayout>
                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1ittle"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/common_gray" />
                <!--十五-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/space_10">

                    <TextView
                        style="@style/piao_details_title"
                        android:text="工作票结束时间：" />

                    <TextView android:id="@+id/tv_details_gzpjssj" style="@style/piao_details_des" />

                </LinearLayout>
                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1ittle"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/common_gray" />
                <!--十六-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/space_10">

                    <TextView
                        style="@style/piao_details_title"
                        android:text="工作领导人（签字）：" />

                    <TextView android:id="@+id/tv_details_ldrqz" style="@style/piao_details_des" />

                </LinearLayout>
                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1ittle"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/common_gray" />
                <!--十七-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/space_10">

                    <TextView
                        style="@style/piao_details_title"
                        android:text="发票人（签字）：" />

                    <TextView android:id="@+id/tv_details_fprqz" style="@style/piao_details_des" />

                </LinearLayout>
                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1ittle"
                    android:layout_marginBottom="@dimen/space_50"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/common_gray" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>